<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wzb.btphone.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/bluetooth_device_chosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_device_chosen" />
    <Button
        android:id="@+id/btn_choose_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <Button
        android:id="@+id/btn_establish_socket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <Button
        android:id="@+id/btn_place_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_call"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_establish_pbap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="初始化"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <Button
        android:id="@+id/btn_pull_phone_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取联系人"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        />
</LinearLayout>
